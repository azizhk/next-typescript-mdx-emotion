{
  "name": "bn.website",
  "description": "Broker Network Website",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start"
  },
  "dependencies": {
    "@babel/core": "^7.0.0-0",
    "@zeit/next-typescript": "^1.1.1",
    "fork-ts-checker-webpack-plugin": "^0.5.2",
    "next": "^8.0.1",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "typescript": "^3.3.3"
  },
  "devDependencies": {
    "@types/next": "^8.0.1",
    "@types/react": "^16.8.3",
    "@types/react-dom": "^16.8.2",
    "husky": "^1.3.1",
    "imagemin-lint-staged": "^0.4.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "tslint": "^5.12.1",
    "tslint-react": "^3.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "*.{png,jpeg,jpg,gif,svg}": [
      "imagemin-lint-staged",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
